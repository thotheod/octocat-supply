{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All",
            "dependsOrder": "sequence",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build API",
            "type": "shell",
            "command": "dotnet",
            "args": ["build", "${workspaceFolder}/api/api-dotnet.csproj"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Frontend",
            "type": "shell",
            "command": "npm",
            "args": ["run", "build", "--workspace=frontend"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$tsc"]
        }
    ]
}